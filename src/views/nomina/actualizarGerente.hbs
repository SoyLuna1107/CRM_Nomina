<div class='container_crearGerente container'>
  <div class='row'>
    <h2 class='center'>Actualizar Gerente</h2>
    <form action='/nomina/actualizarGerente/{{dataGerente.PKCRE_NCODIGO}}' method='post' class='col s12'>
      <div class='row card-panel'>
        <div class="displayNone" id="idGerente">{{dataGerente.PKCRE_NCODIGO}}</div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CUSUARIO' id='CRE_CUSUARIO' value="{{dataGerente.CRE_CUSUARIO}}" />
          <label for='CRE_CUSUARIO'>Usuario</label>
        </div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CNOMBRE' id='CRE_CNOMBRE' value="{{dataGerente.CRE_CNOMBRE}}"/>
          <label for='CRE_CNOMBRE'>Primer Nombre <span class="red-text">*</span></label>
        </div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CNOMBRE2' id='CRE_CNOMBRE2' value="{{dataGerente.CRE_CNOMBRE2}}"/>
          <label for='CRE_CNOMBRE2'>Segundo Nombre</label>
        </div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CAPELLIDO' id='CRE_CAPELLIDO' value="{{dataGerente.CRE_CAPELLIDO}}"/>
          <label for='CRE_CAPELLIDO'>Primer Apellido <span class="red-text">*</span></label>
        </div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CAPELLIDO2' id='CRE_CAPELLIDO2' value="{{dataGerente.CRE_CAPELLIDO2}}"/>
          <label for='CRE_CAPELLIDO2'>Segundo Apellido</label>
        </div>
        <div class='input-field col s4'>
          <input type='text' name='CRE_CDOCUMENTO' id='CRE_CDOCUMENTO' value="{{dataGerente.CRE_CDOCUMENTO}}"/>
          <label for='CRE_CDOCUMENTO'>Cédula <span class="red-text">*</span></label>
        </div>
        <div class='input-field col s4'>
          <select class='select' name='PER_CCAMPANA' id='PER_CCAMPANA' multiple>
            <option value='' disabled>Selecciona la opción</option>
            {{#each rowsCamp}}
              <option value='{{this.EST_CDETALLE1}}'>{{this.EST_CDETALLE1}}</option>
            {{/each}}
          </select>
          <label for='PER_CCAMPANA'>Campaña <span class="red-text">*</span></label>
        </div>
      </div>
      <div class='row center'>
        <button class='btn' id="btnActualizarGerente" type='submit'>Actualizar</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/actualizarGerente.js"></script>